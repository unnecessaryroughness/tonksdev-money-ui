<!DOCTYPE html>

<html>
<head>
    <title><%=pageTitle%></title>
    <%- include('includes/bootstrapSetup.ejs') %>
    <link href="/css/balances.css" rel="stylesheet">
    <script src="/js/balances.js"></script>
</head>

<body>
    <%- include('includes/navbar.ejs') %>

    <div class="main-content-frame">
      <% var totalBalance = parseFloat(0.00); %>

      <h3>My Accounts (<%=header.selectedAccountGroup%>)</h3>
      <table class="table table-striped">
        <thead class="thead-inverse">
          <tr>
            <td>Account</td>
            <td>Account Name</td>
            <td class="field-format-currency">Balance</td>
          </tr>
        </thead>
        <tbody>
          <% pageData.accountList.forEach(function(val, idx, arr) { %>
            <tr>
              <td><a href="/account/<%=val.id%>/register"><%=val.accountCode%></a></td>
              <td><%=val.accountName%></td>
              <td class="field-format-currency">£<%=val.balance%></td>
              <% totalBalance += parseFloat(val.balance); %>
            </tr>
          <% }) %>
            <tr>
              <td></td>
              <td></td>
              <td class="field-format-currency"><strong>£<span id="totalBalance"><%=parseFloat(totalBalance).toFixed(2)%></span></strong></td>
            </tr>
        </tbody>
      </table>

    <div class="container">
      <div class="row">
        <div class="col-md-6 grid-col-border" id="paydayCountdown">
          <table id="countdown">
            <tbody>
              <tr><th>Today:</th>               <td id="today"></td></tr>
              <tr><th>Next Pay Day:</th>        <td id="nextPayDay"></td></tr>
              <tr><th>Days Until Pay Day:</th>  <td id="daysToPayDay"></td></tr>
              <tr><td>&nbsp;</td>               <td>&nbsp;</td></tr>
              <tr><th>Total Balance:</th>       <td id="totalBal"></td></tr>
              <tr><th>Cash per Day:</th>        <td id="cashPerDay"></td></tr>
              <tr><th>Cash per Week:</th>       <td id="cashPerWeek"></td></tr>
            </tbody>
          </table>
        </div>
        <div class="col-md-6 grid-col-border">calendar goes here</div>
      </div>
    </div>

  </div>
</body>
</html>
