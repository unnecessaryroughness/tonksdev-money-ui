<!DOCTYPE html>

<html lang="en">
<head>
    <title><%=pageTitle%></title>
    <%- include('includes/bootstrapSetup.ejs') %>
</head>


<body>
    <%- include('includes/navbar.ejs') %>
    <div class="main-content-frame">
      <h3>An Error Occurred!</h3>

      <% if (typeof pageError === "string") { pageError = JSON.parse(pageError); } %>

      <% if (typeof pageError.errDetails !== "undefined") { %>
        <p class="error-message-header">Code</p>
        <p class="error-message"><%=pageError.errDetails.number%></p>
        <p class="error-message-header">Message</p>
        <p class="error-message"><%=pageError.errDetails.description%></p>
        <p class="error-message-header">Stack</p>
        <p class="error-message"><%=JSON.stringify(pageError.errDetails.stack)%></p>
        </p>
      <% } else { %>
        <% if (typeof pageError.error !== "undefined") { %>
          <p class="error-message-header">Code</p>
          <p class="error-message"><%=pageError.error%></p>
        <% } %>
        <% if (typeof pageError.message !== "undefined") { %>
          <p class="error-message-header">Message</p>
          <p class="error-message"><%=pageError.message%></p>
        <% } %>
      <% } %>

    </div>
</body>
</html>
