<div class="modal fade" id="dialogConfirmModal" tabindex="-1" role="dialog" aria-labelledby="dialogModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="dialogModalLabel">dialogConfirmModalTitle</h4>
      </div>
      <div class="modal-body" id="dialogConfirmModal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="btnConfirmOK">OK</button>
      </div>
    </div>
  </div>
</div>
<script>
  $(function() {
      $("#btnConfirmOK").on("click", function() {
          $(this).data("callback")();
      })
  });

  function showConfirmDialog(dTitle, dMessage, dCallback) {
      $("#dialogModalLabel").text(dTitle);
      $("#dialogConfirmModal-body").text(dMessage);
      $("#btnConfirmOK").data("callback", dCallback);
      $("#dialogConfirmModal").modal("show");
  }
</script>
